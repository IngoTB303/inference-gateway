meta {
  name: Echo Streaming SSE
  type: http
  seq: 1
}

post {
  url: {{base_url}}/v1/chat/completions
  body: json
  auth: none
}

body:json {
  {
    "model": "test",
    "messages": [{"role": "user", "content": "hello"}],
    "stream": true
  }
}

tests {
  test("status is 200", function() {
    expect(res.status).to.equal(200);
  });

  test("content-type is text/event-stream", function() {
    expect(res.headers["content-type"]).to.include("text/event-stream");
  });

  test("response contains a data event", function() {
    expect(res.body).to.include("data: {");
  });

  test("response ends with DONE", function() {
    expect(res.body).to.include("data: [DONE]");
  });
}
