meta {
  name: Request ID From Header
  type: http
  seq: 1
}

post {
  url: {{base_url}}/v1/chat/completions
  body: json
  auth: none
}

headers {
  X-Request-ID: test-request-123
}

body:json {
  {
    "model": "test",
    "messages": [{"role": "user", "content": "hello"}]
  }
}

tests {
  test("status is 200", function() {
    expect(res.status).to.equal(200);
  });

  test("id in body matches sent X-Request-ID", function() {
    expect(res.body.id).to.equal("test-request-123");
  });

  test("X-Request-ID response header matches", function() {
    expect(res.headers["x-request-id"]).to.equal("test-request-123");
  });
}
